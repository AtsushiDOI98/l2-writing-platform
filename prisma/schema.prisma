datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Participant {
  id          String   @id               // 学籍番号（ユニーク）
  name        String
  className   String
  condition   String
  currentStep Int      @default(0)       // 現在のステップ
  brainstorm  String   @default("")
  pretest     String   @default("")
  wcfResult   String   @default("")
  posttest    String   @default("")
  survey      Json?
  createdAt   DateTime @default(now())
}

model ConditionCounter {
  /// このテーブルはグループ割り当てを均等にするためのカウンタ
  id         Int      @id @default(1)
  control    Int      @default(0)
  modelText  Int      @default(0)
  aiWcf      Int      @default(0)
  updatedAt  DateTime @updatedAt
}

